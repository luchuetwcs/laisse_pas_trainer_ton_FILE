
<div class="container">
    <div class="jumbotron">
        <div class="row">
            <h3>Liste des fichiers</h3>
        </div>
        <div class="row">
            {% if uploads is defined %}
                {% for upload in uploads %}
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            {{ upload.image }}
                            <img src="{{ upload.image }}" alt="image">
                            <div class="caption">
                                <h3>{{ upload.name }}</h3>
                                <form action="/Fichiers/delete" method="post">
                                    <input type="hidden" name="delete" value="{{ upload.name }}">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <h4>Aucun fichier upload√©</h4>
            {% endif %}
        </div>
    </div>
</div>